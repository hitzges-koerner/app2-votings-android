<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:src="@drawable/ic_baseline_person_add_24"
        app:tint="@color/grey_144"
        android:padding="12dp"
        android:id="@+id/imageViewIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_transparent"
        android:textColor="@color/grey_144"
        app:layout_constraintBottom_toTopOf="@id/viewUnderline"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSave"
        app:layout_constraintStart_toEndOf="@+id/imageViewIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewUnderline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        app:tint="@color/white"
        android:padding="6dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_edit_24"
        android:background="@drawable/background_round"
        android:id="@+id/imageViewEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        app:tint="@color/white"
        android:padding="6dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_close_24"
        android:background="@drawable/background_round"
        android:id="@+id/imageViewCancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        app:tint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imageViewCancel"
        android:padding="6dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_check_24"
        android:background="@drawable/background_round"
        android:id="@+id/imageViewSave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>