<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:strokeWidth="2dp"
    card_view:elevation="0dp"
    app:cardBackgroundColor="@color/colorAccent"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:id="@+id/materialCardView"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:textSize="@dimen/button_text_size"
        android:gravity="center"
        android:layout_marginTop="@dimen/distance_12dp"
        android:layout_marginBottom="@dimen/distance_12dp"
        android:layout_marginLeft="@dimen/distance_16dp"
        android:layout_marginRight="@dimen/distance_16dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.google.android.material.card.MaterialCardView>