<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="16dp"
    android:elevation="0dp"
    android:translationZ="0dp"
    app:strokeColor="@color/colorAccent"
    app:strokeWidth="2dp"
    android:id="@+id/materialCardViewTab">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:text="@string/tile_news"
            android:padding="8dp"
            android:id="@+id/textViewTabLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewTabRight"
            android:background="@color/colorAccent"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:text="@string/tile_notifications"
            android:gravity="center"
            android:padding="8dp"
            android:id="@+id/textViewTabRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewTabLeft"
            android:background="@color/white"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>